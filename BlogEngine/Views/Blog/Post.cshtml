@using System.Globalization
@model BlogEngine.DTO.Post
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<article class="blog-single">
    <meta name="author" content="@ViewBag.AuthorName" />
    <meta name="Post Title" content="@Model.Title" />
    <!-- page header/blog hero
    ================================================== -->
    <div class="page-header page-header--single page-hero" style="background-image:url(@Url.Content("~/Content/themes/Hola10/images/blog/blog-bg-02.jpg"))">

        <div class="row page-header__content narrow">
            <article class="col-full">
                <div class="page-header__info">
                    <div class="page-header__cat">
                        <a href="#0">@Model.Category.CategoryName</a>
                    </div>
                </div>
                <h1 class="page-header__title">
                    <a href="#0" title="">
                        @Model.Title
                    </a>
                </h1>
                <ul class="page-header__meta">                    
                    @{
                        DateTime dt = new DateTime();
                        dt = Convert.ToDateTime(Model.PostedOn);
                     }
                    <li class="date">@CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(dt.Month) @dt.Day, @dt.Year</li>
                    <li class="author"> By <span>@ViewBag.AuthorName</span></li>
                </ul>

            </article>
        </div>

    </div> <!-- end page-header -->

    <div class="row blog-content">
        <div class="col-full blog-content__main">   

            <!-- Post Description-->         
            @Html.Raw(Model.PostDescription)

            <p class="blog-content__tags">
                <span>Post Tags</span>
                <span class="blog-content__tag-list">
                    @if (Model.Tags.Count > 0)
                    {
                        foreach (var tag in Model.Tags)
                        {
                            @Html.TagLink(tag)
                        }
                    }
                </span>                

            </p>

            <p class="blog-content__share">
                <span>Share Post</span>
                <span class="blog-content__share-list">

                    <!-- Email -->
                    <a class="mail" href="mailto:?Subject=Simple Share Buttons&amp;Body=I%20saw%20this%20and%20thought%20of%20you!%20 https://simplesharebuttons.com">
                        Email
                    </a>

                    <!-- Facebook -->
                    <a class="facebook" href="http://www.facebook.com/sharer.php?u=https://simplesharebuttons.com" target="_blank">
                        Facebook
                    </a>

                    <!-- Google+ -->
                    <a class="googleplus" href="https://plus.google.com/share?url=https://simplesharebuttons.com" target="_blank">
                        Google Plus
                    </a>

                    <!-- LinkedIn -->
                    <a class="linkedin" href="http://www.linkedin.com/shareArticle?mini=true&amp;url=https://simplesharebuttons.com" target="_blank">
                        LinkedIn
                    </a>

                    <!-- Print -->
                    <a class="print" href="javascript:;" onclick="window.print()">
                        Print
                    </a>

                    <!-- Reddit -->
                    <a class="reddit" href="http://reddit.com/submit?url=https://simplesharebuttons.com&amp;title=Simple Share Buttons" target="_blank">
                        Reddit
                    </a>

                    <!-- StumbleUpon-->
                    <a class="stumbleupon" href="http://www.stumbleupon.com/submit?url=https://simplesharebuttons.com&amp;title=Simple Share Buttons" target="_blank">
                        StumbleUpon
                    </a>

                    <!-- Tumblr-->
                    <a class="tumblr" href="http://www.tumblr.com/share/link?url=https://simplesharebuttons.com&amp;title=Simple Share Buttons" target="_blank">
                        Tumblr
                    </a>

                    <!-- Twitter -->
                    <a class="twitter" href="https://twitter.com/share?url=https://simplesharebuttons.com&amp;text=Simple%20Share%20Buttons&amp;hashtags=simplesharebuttons" target="_blank">
                        Twitter
                    </a>
                </span>
            </p>

            <div class="blog-content__pagenav">
                <div class="blog-content__nav">
                    <div class="blog-content__prev">
                        <a href="#0" rel="prev">
                            <span>Previous Post</span>
                            Tips on Minimalist Design
                        </a>
                    </div>
                    <div class="blog-content__next">
                        <a href="#0" rel="next">
                            <span>Next Post</span>
                            Less Is More
                        </a>
                    </div>
                </div>

                <div class="blog-content__all">
                    <a href="@Url.Action("Posts", "Blog", new { page = 1})" class="btn btn--primary">View All Post</a>
                </div>
            </div>

        </div><!-- end blog-content__main -->
    </div> <!-- end blog-content -->

</article>

<!--Subscription section-->
<section id="stats" class="s-stats">

    <div class="row narrow section-intro has-bottom-sep">
        <div class="col-full">
            <h2>Subscribe to our new letter.</h2>
            <p class="lead">
                To get the latest updates from our site subscribe to our site.
            </p>
            <a href="@Url.Action("Subscribe","Blog")" class="btn btn--stroke">Click to Subscribe</a>
        </div>
    </div>

</section><!--end Subscription -->

<!--start Comments-->

@Html.Action("LoadCommentsForPost", new
{
    postId = Model.PostId
})

<!--end Comments-->

