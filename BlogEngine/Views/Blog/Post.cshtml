
@model BlogEngine.DTO.Post
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<div id="content">
    <div class="post">
        <div class="post-meta">
            <div class="row">

                <div class="post-title">
                    <h1>@Html.PostLink(Model)</h1>
                </div>

            </div>
            <div class="row">

                <div class="post-category">
                    <span>Category:</span> @Html.CategoryLink(Model.Category)
                </div>

                <div class="post-tags">
                    <span>Tags:</span> @Helpers.Tags(Html, Model.Tags)
                </div>

                <div class="posted-date">
                    @Model.PostedOn.ToShortDateString()
                </div>

            </div>
        </div>

        <div class="post-body">
            @Html.Raw(Model.PostDescription)
        </div>

    </div>
</div>

