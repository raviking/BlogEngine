    {
        debugger;
        var re_email = /^([\w-\.]+@@([\w-]+\.)+[\w-]{2,4})?$/i;
        var phoneReg= /([0-9]{10})|(\([0-9]{3}\)\s+[0-9]{3}\-[0-9]{4})/;
        var result = true;
        if ($("#txt_comment_author_name").val().trim() == "" || $("#txt_comment_author_name").val().trim() == undefined) {
