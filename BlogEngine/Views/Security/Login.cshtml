
@using System.Configuration
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <!-- Admin LTE-->
    <!-- Bootstrap 3.3.7 -->
    <link href="~/Content/AdminLTE/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Content/AdminLTE/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link href="~/Content/AdminLTE/Ionicons/ionicons.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/Content/AdminLTE/AdminLTE.min.css" rel="stylesheet" />
    <!-- iCheck -->
    <link href="~/Content/AdminLTE/iCheck/square/blue.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">

    <script src="~/Scripts/app/UriTemplates.js"></script>
    <script type="text/javascript">
        var HostAddress="@ConfigurationManager.AppSettings["WebHostAddress"].ToString()";
    </script>
    
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>Blog</b>Engine</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>
            <form method="post">
                <span style="color:red;" id="spnLoginValMsg"></span>
                <div class="form-group has-feedback">                    
                    <input type="text" id="UserName" class="form-control" placeholder="UserName">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    <span style="display:none;color:red;" id="spnUserName">UserName Required</span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" id="Password" class="form-control" placeholder="Password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    <span class="ErrorMsg" style="display:none;color:red;" id="spnPassword">Password Required</span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox"> Remember Me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="button" onclick="Javascript: Login();" class="btn btn-primary btn-block btn-flat">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
                <input type="hidden" id="hdnReturnUrl" value="@ViewBag.ReturnUrl" />
            </form>

            <!-- /.social-auth-links -->
            <a href="#">I forgot my password</a><br>
            <a href="#" class="text-center">Register a new membership</a>
        </div>
        <!-- /.login-box-body -->
    </div>
    
    <!-- jQuery 3 -->
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Scripts/AdminLTE/iCheck/icheck.min.js"></script>

    <script src="~/Scripts/app/login.js"></script>
    </body>
</html>