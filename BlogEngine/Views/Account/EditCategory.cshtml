
@model BlogEngine.DTO.Category
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div>
    <section class="content-header">
        <h1>Categories</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Categories</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-8">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Edit Category</h3>
                    </div>
                    <div class="box-body">
                        <form role="form">
                            <div class="box-body">
                                <input type="hidden" id="hdnCategoryId" value="@Model.CategoryId" />
                                <div class="form-group">
                                    <label for="CategoryName">Name</label>
                                    <input type="text" class="form-control" value="@Model.CategoryName" id="txtCategoryName">
                                    <span id="spntxtCategoryName" class="Error_Msg" style="display:none;"></span>
                                    <p><i>The name is how it appears on your site.</i></p>
                                </div>
                                <div class="form-group">
                                    <label for="CategoryUrlSlug">Slug</label>
                                    <input type="text" class="form-control" value="@Model.CategoryUrlSlug" id="txtCategoryUrlSlug" onchange="javascript: checkIsSlugExists();">
                                    <span id="spntxtCategoryUrlSlug" class="Error_Msg" style="display:none;"></span>
                                    <p><i>The “slug” is the URL-friendly version of the name. It is usually all lowercase and contains only letters, numbers, and hyphens.</i></p>
                                </div>
                                <div class="form-group">
                                    <label for="CategoryDescription">Description</label>
                                    <textarea rows="5" cols="40" class="form-control" id="txtCategoryDescription">@Model.CategoryDescription</textarea>
                                    <p><i>The description is not prominent by default; however, some themes may show it.</i></p>
                                </div>
                            </div>
                            <div class="box-footer">
                                <button type="button" class="btn btn-primary" onclick="javascript:addNewCategory('EDIT');">Update Category</button>
                                <button type="button" class="btn btn-primary" onclick="javascript:resetForm();">Reset</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script src="~/Scripts/jquery-3.2.1.min.js"></script>
<script src="~/Scripts/app/Account/Categories.js"></script>

