
@model BlogEngine.DTO.Tag
@{
    ViewBag.Title = "EditTag";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div>
    <section class="content-header">
        <h1>Edit Tags</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Tags</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-8">
                <div class="box box-info">
                    <div class="box-header">
                        <h3 class="box-title">Edit Tag</h3>
                    </div>
                    <div class="box-body">
                        <form role="form">
                            <div class="box-body">
                                <input type="hidden" id="hdnTagId" value="@Model.TagId" />
                                <div class="form-group">
                                    <label for="TagName">Name</label>
                                    <input type="text" value="@Model.TagName" class="form-control" id="txtTagName">
                                    <span id="spntxtTagName" class="Error_Msg" style="display:none;"></span>
                                    <p><i>The name is how it appears on your site.</i></p>
                                </div>
                                <div class="form-group">
                                    <label for="TagUrlSlug">Slug</label>
                                    <input type="text" class="form-control" value="@Model.TagUrlSlug" onchange="javascript: checkIsSlugExists();" id="txtTagUrlSlug">
                                    <span id="spntxtTagUrlSlug" class="Error_Msg" style="display:none;"></span>
                                    <p><i>The “slug” is the URL-friendly version of the name. It is usually all lowercase and contains only letters, numbers, and hyphens.</i></p>
                                </div>
                                <div class="form-group">
                                    <label for="TagDescription">Description</label>
                                    <textarea rows="5" cols="40" class="form-control" id="txtTagDescription">@Model.TagDescription</textarea>
                                    <span id="spntxtTagDescription" class="Error_Msg" style="display:none;"></span>
                                    <p><i>The description is not prominent by default; however, some themes may show it.</i></p>
                                </div>
                            </div>
                            <div class="box-footer">
                                <button type="button" class="btn btn-primary" onclick="javascript:addNewTag('EDIT');">Update Tag</button>
                                <button type="button" class="btn btn-primary" onclick="javascript:resetForm();">Reset</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script src="~/Scripts/jquery-3.2.1.min.js"></script>
<script src="~/Scripts/app/Account/Tags.js"></script>